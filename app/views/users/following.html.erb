<!-- app/views/users/following.html.erb -->
<h2><%= @user.name || @user.email %> さんがフォロー中</h2>
<ul>
  <% @users.each do |u| %>
    <li><%= link_to (u.name || u.email), user_path(u) %></li>
  <% end %>
</ul>

