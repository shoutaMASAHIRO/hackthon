<%= form_with model: [post, Comment.new], local: true do |f| %>
    <div style="margin-bottom:8px;">
      <%= f.text_area :body, rows: 3, placeholder: "感想や質問をどうぞ", style: "width:100%; padding:8px;" %>
    </div>
    <%= f.submit "送信", class: "btn", style: "padding:8px 14px; border:1px solid #ddd; border-radius:6px; cursor:pointer;" %>
  <% end %>
  