<h3>コメントを編集</h3>

<%= form_with model: [@post, @comment], local: true do |f| %>
  <div style="margin-bottom:8px;">
    <%= f.text_area :body, rows: 4, style: "width:100%; padding:8px;" %>
  </div>
  <%= f.submit "更新する", style: "padding:8px 14px; border:1px solid #ddd; border-radius:6px; cursor:pointer;" %>
  <%= link_to "戻る", @post, style: "margin-left:12px;" %>
<% end %>
