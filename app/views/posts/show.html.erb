<%# ---------- Page-local styles (no external CSS) ---------- %>
<style>
  .container {
    max-width: 820px;
    margin: 20px auto;
    padding: 0 16px;
  }
  .card {
    background: #fff;
    border: 1px solid #eee;
    border-radius: 14px;
    box-shadow: 0 2px 6px rgba(0,0,0,.04);
    padding: 18px 20px;
  }
  .title {
    margin: 0 0 6px;
    font-size: 24px;
    line-height: 1.3;
  }
  .meta {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    align-items: center;
    color: #666;
    font-size: 14px;
    margin: 0 0 12px;
  }
  .divider {
    height: 1px;
    background: #f1f1f1;
    margin: 14px 0;
  }
  .body {
    white-space: pre-wrap;
    line-height: 1.8;
    color: #222;
    font-size: 16px;
  }
  .imgwrap {
    text-align: center;
    margin: 12px 0;
  }
  .post-img {
    border-radius: 10px;
    max-width: 100%;
    height: auto;
  }

  /* author link hover */
  .author-link {
    color:#666;
    text-decoration:none;
    padding:2px 6px;
    border-radius:4px;
    transition: background .15s ease, color .15s ease;
  }
  .author-link:hover {
    background:black;
    color:white;
  }

  /* buttons */
  .btnrow {
    margin-top: 16px;
    display: flex;
    gap: 10px;
    flex-wrap: wrap;
  }
  .btn {
    display: inline-block;
    text-decoration: none;
    border-radius: 8px;
    padding: 8px 16px;
    font-size: 14px;
    line-height: 1;
    border: 1px solid transparent;
    cursor: pointer;
    transition: filter .15s ease, transform .02s ease;
  }
  .btn:active { transform: translateY(1px); }
  .btn-primary {
    background:#0d6efd; color:#fff;
  }
  .btn-danger  {
    background:#dc3545; color:#fff;
  }
  .btn:hover { filter: brightness(0.95); }

  /* sections */
  .section { margin: 18px 0; }
  .section h3 { margin: 0 0 10px; }

  /* back link */
  .back { margin: 14px 0 0; display:inline-block; }
</style>

<div class="container">
  <article class="card">
    <header>
      <h2 class="title"><%= @post.title %></h2>

      <p class="meta">
        <span>
          by
          <%= link_to (@post.user.name.presence || @post.user.email),
                      user_path(@post.user),
                      class: "author-link" %>
        </span>
        <span>・<%= l @post.created_at, format: :long %></span>
      </p>

      <% if @post.image.attached? %>
        <div class="imgwrap">
          <%= image_tag @post.image.variant(resize_to_limit: [500, 500]),
                        alt: @post.title,
                        class: "post-img" %>
        </div>
      <% end %>

      <div class="divider"></div>
    </header>

    <div class="body"><%= simple_format @post.body %></div>

    <% if user_signed_in? && @post.user == current_user %>
      <div class="btnrow">
        <%= link_to "編集", edit_post_path(@post), class: "btn btn-primary" %>

        <%= button_to "削除", @post,
                      method: :delete,
                      form: { data: { turbo_confirm: "削除しますか？" } },
                      class: "btn btn-danger" %>
      </div>
    <% end %>
  </article>

  <div class="section">
    <div class="card" style="padding:14px 16px;">
      <%= render "posts/like_section", post: @post %>
    </div>
  </div>

  <div class="section">
    <div class="card">
      <h3>コメント (<%= @post.comments.count %>)</h3>

      <div class="divider"></div>

      <% @post.comments.order(created_at: :desc).each do |comment| %>
        <%= render "comments/comment", post: @post, comment: comment %>
      <% end %>

      <% if user_signed_in? %>
        <div class="divider"></div>
        <h3 style="margin-bottom:8px;">コメントを書く</h3>
        <%= render "comments/form", post: @post %>
      <% else %>
        <p><%= link_to "ログイン", new_user_session_path %>するとコメントできます。</p>
      <% end %>
    </div>
  </div>

  <p class="back"><%= link_to "一覧へ戻る", posts_path %></p>
</div>
